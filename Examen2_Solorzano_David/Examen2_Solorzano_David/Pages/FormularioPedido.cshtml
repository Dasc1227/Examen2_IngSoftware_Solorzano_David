@page
@model Examen2_Solorzano_David.Pages.FormularioPedidoModel
@{
    ViewData["Title"] = "FormularioPedido";
}

<head>
    <link rel="stylesheet" href="~/css/form.css" />
    
</head>
<h2>FormularioPedido</h2>

<div class="container">
    <form action="post">
        <h1>Arme su pizza</h1>
        <br>

        <p>Arme su pizza con sus opciones e ingredientes preferibles</p>
        <hr>
        <div>
            <h4>Estructura<span class="required">*</span></h4>
            <br>
            <p>Escoja la Masa y el Tamaño</p>
            <br>
            <div class="row">
                <div class="col-sm-6"><h4>Masa</h4></div>
                <div class="col-sm-6"><h4>Tamaño</h4></div>
            </div>

            <br>
            <div class="row">
                <div class="col-sm-6">

                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Original
                        </label>
                    </div>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                        <label class="form-check-label" for="gridRadios2">
                            Crunchy
                        </label>
                    </div>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                        <label class="form-check-label" for="gridRadios3">
                            Sarten
                        </label>
                    </div>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3">
                        <label class="form-check-label" for="gridRadios3">
                            Orilla de Queso
                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadio" id="gridRadio3" value="option3">
                        <label class="form-check-label" for="gridRadio3">
                            Pequeña
                        </label>
                    </div>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadio" id="gridRadio1" value="option1" checked>
                        <label class="form-check-label" for="gridRadio1">
                            Mediana
                        </label>
                    </div>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadio" id="gridRadio2" value="option2">
                        <label class="form-check-label" for="gridRadio2">
                            Grande
                        </label>
                    </div>
                    <br>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadio" id="gridRadio3" value="option3">
                        <label class="form-check-label" for="gridRadio3">
                            Extra Grande
                        </label>
                    </div>
                    <br>
                </div>

            </div>
            <hr>
            <div>
                <h4>Salsa y Queso<span class="required">*</span></h4>
                <br>
                <p>Escoja la Salsa y el Queso</p>
                <br>
                <div class="row">
                    <div class="col-sm-6"><h4>Salsa</h4></div>
                    <div class="col-sm-6"><h4>Queso</h4></div>
                </div>

                <br>
                <div class="row">
                    <div class="col-sm-6">

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="salsa" id="grid1" value="option1" checked>
                            <label class="form-check-label" for="gridRadios1">
                                Mitad Izquierda
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="salsa" id="grid2" value="option2">
                            <label class="form-check-label" for="gridRadios2">
                                Todo
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="salsa" id="grid3" value="option3">
                            <label class="form-check-label" for="gridRadios3">
                                Mitad derecha
                            </label>
                        </div>
                        <br>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="queso" id="queso3" value="option3">
                            <label class="form-check-label" for="gridRadio3">
                                Parte Izquierda
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="queso" id="queso1" value="option1" checked>
                            <label class="form-check-label" for="gridRadio1">
                                Todo
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="queso" id="queso2" value="option2">
                            <label class="form-check-label" for="gridRadio2">
                                Parte Derecha
                            </label>
                        </div>
                        <br>

                        <br>
                    </div>

                </div>
                <hr>
                <div class="row">
                    <h4>Ingredientes<span class="required">*</span></h4>
                    <br>
                    <p>Escoja los ingredientes(Cada ingrediente que agregue son 500 colones adicionales)</p>
                    <br>
                    <div class="col-sm-6">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Jamon"> Jamon
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Peperoni"> Peperoni
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Tocino"> Tocino
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Carne"> Carne
                            </label>
                        </div>
                        <br>

                    </div>
                    <div class="col-sm-6">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Pina"> Piña
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Pimiento"> Pimiento
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="Cheddar"> Queso Cheddar
                            </label>
                        </div>
                        <br>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="checkbox" class="form-check-input" value="hongos"> Champiñones
                            </label>
                        </div>

                    </div>

                </div>

                <div class="btn">
                    <button type="submit" href="/">Send</button>
                </div>
</form>
</div>

